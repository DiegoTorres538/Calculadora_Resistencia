<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9C4"
    tools:context=".MainActivity">


    <Spinner
        android:id="@+id/spinnerband1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.143"
        app:layout_constraintStart_toEndOf="@+id/banda1"
        app:layout_constraintTop_toBottomOf="@+id/pantallaresultado" />

    <Spinner
        android:id="@+id/spinnerband2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.138"
        app:layout_constraintStart_toEndOf="@+id/banda2"
        app:layout_constraintTop_toBottomOf="@+id/spinnerband1" />

    <Spinner
        android:id="@+id/spinnermulti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.235"
        app:layout_constraintStart_toEndOf="@+id/multiplicador"
        app:layout_constraintTop_toBottomOf="@+id/spinnerband2" />

    <Spinner
        android:id="@+id/spinnertol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.186"
        app:layout_constraintStart_toEndOf="@+id/tolerancia"
        app:layout_constraintTop_toBottomOf="@+id/spinnermulti" />

    <TextView
        android:id="@+id/banda1"
        android:layout_width="90dp"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:text="@string/banda1"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textAlignment="gravity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pantallaresultado" />

    <TextView
        android:id="@+id/banda2"
        android:layout_width="90dp"
        android:layout_height="27dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:textSize="20sp"
        android:text="@string/banda2"
        android:textColor="#000000"
        android:textAlignment="gravity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/banda1" />

    <TextView
        android:id="@+id/multiplicador"
        android:layout_width="90dp"
        android:layout_height="27dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:textSize="20sp"
        android:text="@string/multiplicador"
        android:textColor="#000000"
        android:textAlignment="gravity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/banda2" />

    <TextView
        android:id="@+id/tolerancia"
        android:layout_width="90dp"
        android:layout_height="27dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:textSize="20sp"
        android:text="@string/tolerancia"
        android:textColor="#000000"
        android:textAlignment="gravity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/multiplicador" />

    <Button
        android:id="@+id/calculo"
        android:layout_width="164dp"
        android:layout_height="54dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:text="@string/calcular"
        android:textColor="#000000"
        android:background="#effff0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tolerancia"
        app:layout_constraintVertical_bias="0.213" />

    <TextView
        android:id="@+id/pantallaresultado"
        android:layout_width="213dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:textSize="25sp"
        android:hint="@string/resultado"
        android:textColor="#000000"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>